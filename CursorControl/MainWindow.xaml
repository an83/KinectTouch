<Window x:Class="Microsoft.Kinect.Samples.CursorControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect Cursor Control" Height="520" Width="640" Loaded="Window_Loaded" Closed="Window_Closed" 
        WindowStartupLocation="CenterScreen" StateChanged="Window_StateChanged" ResizeMode="CanMinimize" Icon="CursorControl.ico" 
        xmlns:my="clr-namespace:Microsoft.Samples.Kinect.WpfViewers;assembly=Microsoft.Samples.Kinect.WpfViewers">
    <StackPanel>
        <my:KinectSensorChooser Name="kinectSensorChooser" Width="300" />
        <Image Width="320" Height="240" Name="video"/>
        <CheckBox Name="LeftHand">Left-handed</CheckBox>
        <TextBlock Name="Status" FontSize="36" />
    </StackPanel>
</Window>
